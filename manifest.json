{
    "manifest_version": 2,

    "name": "Bet Better",
    "version": "0.1.0",
    "description": "Chrome Extension for monitoring time spent on betting websites",

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "assets/img-16.png",
            "24": "assets/img-24.png",
            "32": "assets/img-32.png"
        }
    },
    "permissions": [
        "tabs"
    ]
}